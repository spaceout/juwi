<h3><%= "Listing #{@episodes.count} Episodes of #{@tvshow.ttdb_show_title}"  %></h3>
<table>
  <tr>
    <th>Episode</th>
    <th>Episode Airdate</th>
    <th>XBMC Episode ID</th>
  </tr>

<% @episodes.each do |episode| %>
  <tr>

    <td><%= link_to episode.tvshow.ttdb_show_title + " - " + 
    "s" '%02d' % episode.ttdb_season_number + "e" + 
    '%02d' % episode.ttdb_episode_number + " - " + 
    episode.ttdb_episode_title, "/tvshows/#{@tvshow.id}/episodes/#{episode.id}" %></td>
    <td><%= episode.ttdb_episode_airdate %></td>
    <td><%= episode.xdb_episode_id %></td>
  </tr>
<% end %>
</table>
