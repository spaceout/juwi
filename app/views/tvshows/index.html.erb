<h3> <%= "Listing #{@tvshows.count} TVshows" %></h3>

<table>
  <tr>
    <th>Show Name</th>
    <th>Airing Status</th>
    <th>Next Airing</th>
  </tr>

  <% @tvshows.each do |tvshow| %>
  <tr>
    <td><%= link_to(tvshow.ttdb_show_title, tvshow) %></td>
    <td><%= tvshow.tvr_show_status %></td>
    <td><%= if tvshow.tvr_next_episode_date == nil then "TBD" else "#{tvshow.tvr_next_episode_date}" end %></td>
    <td><%= link_to 'Episodes', tvshow_episodes_path(tvshow) %></td>
  </tr>
<% end %>
</table>

<br />

