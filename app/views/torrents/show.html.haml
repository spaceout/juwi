%p#notice= notice
%p
  %b Hash string:
  = @torrent.hash_string
%p
  %b Time started:
  = @torrent.time_started
%p
  %b Time completed:
  = @torrent.time_completed
%p
  %b Name:
  = @torrent.name
%p
  %b Size:
  = @torrent.size
%p
  %b Status:
  = @torrent.status_to_s
%p
  %b Percent:
  = @torrent.percent
%p
  %b Completed:
  = @torrent.completed
%p
  %b Files:
  %table.table.table-hover
    %thead
      %tr
        %th Name
        %th Size
        %th Rename Result
        %th Rename Data
    %tbody
      - @torrent.tfiles.each do |torrent_file|
        %tr
          %td= torrent_file.name
          %td= torrent_file.length
          %td= torrent_file.rename_status
          %td= torrent_file.rename_data
%p
  %b Rename Status:
  =@torrent.rename_status
%p
  %b Eta:
  =@torrent.eta
%p
  %b Xmission ID
  =@torrent.xmission_id
%p
  %b Rate Download
  =@torrent.rate_download
= link_to 'Back', torrents_path
